{
    "[typescript]": {
      "editor.parameterHints.enabled": true,
      "editor.suggest.showModules": true
    },
    "files.exclude": {
      "**/.git": true,
      "**/.gitignore": true,
      // "**/node_modules": true
    },
    "workspace.isHidden": false,
    "editor.stickyTabStops": true,
    "editor.detectIndentation": true,
    "editor.tabSize": 4,
    "[html]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
    },
    "[css]": {
      "editor.tabSize": 4,
      "editor.insertSpaces": true,
      "editor.detectIndentation": false,
  }
  }

